<Window x:Class="MusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayer"
        mc:Ignorable="d"
        Title="Music Player" Height="500" Width="250" MinWidth="300" MinHeight="500" WindowState="Minimized" WindowStartupLocation="CenterOwner">
    <Window.Style>
        <Style/>
    </Window.Style>
    <Border x:Name="Menu" BorderBrush="Black" BorderThickness="1">
        <ContentControl Padding="5,5,5,5">
            <StackPanel x:Name="Main" HorizontalAlignment="Left" VerticalAlignment="Top" Height="69" Width="300" Orientation="Horizontal" Margin="0,408,0,0" UseLayoutRounding="False">
                <ContentControl x:Name="Control1" ScrollViewer.VerticalScrollBarVisibility="Disabled" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="90" Height="70" Margin="5,0,10,0">
                    <Button Content="SkipBackward" Padding="5,5,5,5" Height="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled" Width="50" Margin="20,0,20,0" FontSize="6" Click="Button_Click_1"/>
                </ContentControl>
                <ContentControl x:Name="Control2" ScrollViewer.VerticalScrollBarVisibility="Disabled" Width="90" Height="70" Margin="0,0,10,0" Padding="5,5,5,5">
                    <Button Content="Play" Padding="5,5,5,5" Width="50" Height="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch" Margin="20,0,20,0"/>
                </ContentControl>
                <ContentControl x:Name="Control3" Height="70" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Panel.ZIndex="0" Width="90" ScrollViewer.VerticalScrollBarVisibility="Disabled" Margin="-5,0,10,0">
                    <Button Content="SkipForward" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="5,5,5,5" Height="30" Width="50" Margin="20,0,20,0" FontSize="6"/>
                </ContentControl>
            </StackPanel>
        </ContentControl>
    </Border>


</Window>
